@model IEnumerable<GroceryShoppingApp.Models.CustomerDto>

<h2>Customer List</h2>

<a asp-action="New" class="btn btn-primary">Add New Customer</a>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>More info</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerFname</td>
                <td>@customer.CustomerLname</td>
                <td>
                    <a asp-action="Details" asp-route-id="@customer.CustomerId" class="btn btn-info">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

