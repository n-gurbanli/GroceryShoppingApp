@model GroceryShoppingApp.Models.CustomerDto;

<div class="row">
    <h2>Confirm Delete</h2>
    <p>Are you sure you want to delete this Customer?</p>

    <div>
        <label>Name</label>
        <div>@Model.CustomerFname @Model.CustomerLname</div>
    </div>

    <form method="POST" action="/CustomerPage/Delete/@Model.CustomerId">
        <input type="submit" value="Delete" class="alert-warning" />

    </form>
</div>
