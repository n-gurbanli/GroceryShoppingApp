@model GroceryShoppingApp.Models.ProductDto

<h2>Product Details</h2>

<div>
    <h3>@Model.ProductName</h3>
    <p><strong>Description:</strong> @Model.ProductDesc</p>
    <p><strong>Category:</strong> @Model.Category</p>
    <p><strong>Price:</strong> @Model.Price.ToString()

    <div>
        <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">Edit</a>
        <a asp-action="List" class="btn btn-secondary">Back to Product List</a>        
        <a asp-action="ConfirmDelete" asp-route-id="@Model.ProductId" class="btn btn-danger">Delete</a>
    </div>
</div>


